{
  "compileOnSave": true,

  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "diagnostics": true,
    "listFiles": false,
    "pretty": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noEmit": false
  },

  "bundles": {
    "tsminifier": {
      "files": [ "./TsMinifier.ts" ],
      "config": {
        "package": "component",
        "packageNamespace": "TsMinifier",
        "outDir": "./bundle",
        "minify": false
      }
    }
  }
}